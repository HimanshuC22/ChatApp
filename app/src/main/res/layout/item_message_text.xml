<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearTest"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="-12dp"
            android:background="@null"
            android:scaleX="-1.5"
            android:src="@drawable/message_shape"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/linearColorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/senderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:text="You"
                        android:textColor="@color/main_orange"
                        android:visibility="visible" />

                    <com.vanniktech.emoji.EmojiTextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="web|phone|email"
                        android:minEms="2"
                        android:paddingHorizontal="14dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="Message"
                        android:textColor="@color/messageText"
                        app:emojiSize="@dimen/emoji_icon_size" />

                    <include layout="@layout/partial_message_status_view" />

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <ImageView
            android:id="@+id/right_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="-12dp"
            android:layout_marginTop="-6dp"
            android:background="@null"
            android:scaleX="1.5"
            android:src="@drawable/message_shape_two"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>

